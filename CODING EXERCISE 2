package myScanner;

import java.util.Scanner;

public class Exercise2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int num;
		double value;
		
		Scanner scan = new Scanner (System.in);
		
		System.out.println("Enter an integer: ");
		num = scan.nextInt();
		
		System.out.println("Using next integer(): " +num);
		num++;
		System.out.println("Using next integer() increament by 1: " +num);
		num=num+5;
		System.out.println("Using next integer() increament by 5: "+num);
		num=num%10;
		System.out.println("Using next integer() mod 10: "+num);
		
		System.out.println("Enter double value: ");
		value = scan.nextDouble();
		
		System.out.println("Using next double(): " +value);
		++value;
		System.out.println("Using next double() decreament by 1: "+value);
		value=value-5;
		System.out.println("Using next double() decreament by 5: "+value);
		value=value%10;
		System.out.println("Using next double() mod 10: "+value);
		
		double y = Math.pow(num, value);
		System.out.println(y);
	}

}
