package assignment;

import java.util.Scanner;

public class Assignment1A {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

			Scanner input = new Scanner(System.in);
				
			double interestrate, loanamount; 
			double total;
			double monthly;
			double alltotal;
			int years;

			Scanner scan = new Scanner(System.in);

				System.out.print("Enter the  yearly interest rate: "); 
				interestrate = scan.nextDouble();

				System.out.println("Enter the number of years as an integer: " ); 
				years = scan.nextInt();

				System.out.print("Enter the loan amount: "); 
				loanamount = scan.nextDouble();


				total=(interestrate/100)*loanamount*years; 
				
				monthly=(interestrate/100)*loanamount;
				
				alltotal=monthly*(years*12);

				System.out.printf("The monthly payment is : $%.2f" , monthly);
				System.out.println("");
				System.out.printf("The total payment is : $%.2f" , alltotal);
				
					
				

			}

		}


